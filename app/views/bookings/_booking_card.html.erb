<div class="pending-card">
<h3>Pending bookings:</h3>
<% @bookings.each do |booking| %>
  <% if booking.offer.user == current_user && booking.status == 'Pending' %>
    <div>
        <div class="card-product">
          <%= cl_image_tag booking.user.photo.key, class:"card-img" %>
          <div class="card-product-infos">
            <h2> <%= booking.offer.title %> booked by <%= link_to booking.user.first_name, user_path(booking.user) %></h2>
            <h4>Start time: <%= link_to booking.start_time.strftime("%d/%m/%Y"), booking_path(booking) %></h4>
            <h4>End time: <%= link_to booking.end_time.strftime("%d/%m/%Y"), booking_path(booking) %></h4>
            <p>Description <%= booking.description %></p>
            <p>Status: <%= booking.status %></p>
          </div>
        </div>
    </div>
  <% end %>
<% end %>
</div>
