<%= simple_form_for @offer do |f| %>
          <%= f.input :title, placeholder: 'title' %>
          <%= f.input :description, placeholder: 'Description' %>
          <%= f.input :category, placeholder: 'Drama' %>
          <%= f.input :start_time, placeholder: 'start' %>
          <%= f.input :end_time, placeholder: 'end' %>
